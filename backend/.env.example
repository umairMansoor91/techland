# ===========================================
# TechLand Backend Environment Configuration
# ===========================================
# Copy this file to .env and update the values

# -----------------------------
# Django Core Settings
# -----------------------------
# IMPORTANT: Set DEBUG=False in production!
DEBUG=True

# Generate a secure key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production

# Comma-separated list of allowed hosts (your domain in production)
# Example for production: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------
# Database Configuration
# -----------------------------
# For development: leave empty to use SQLite
# For production: use PostgreSQL connection string
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
# Example: DATABASE_URL=postgres://techland_user:securepassword@localhost:5432/techland_db
DATABASE_URL=

# -----------------------------
# Redis Cache (Required for production)
# -----------------------------
# For development: leave empty to use local memory cache
# For production: use Redis connection string
# Example: REDIS_URL=redis://localhost:6379/1
REDIS_URL=

# -----------------------------
# CORS Configuration
# -----------------------------
# Comma-separated list of allowed frontend origins
# IMPORTANT: Update this with your production frontend URL
# Example: CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# -----------------------------
# Admin Email Configuration
# -----------------------------
# These emails are used for reference in Django admin
# Form submissions are stored in database and viewed via Django admin panel
ADMIN_EMAIL=infoline@mindtechub.com
CAREER_EMAIL=career@mindtechub.com

# -----------------------------
# Google reCAPTCHA v3
# -----------------------------
# Get keys from: https://www.google.com/recaptcha/admin
# Select reCAPTCHA v3 (invisible)
RECAPTCHA_PUBLIC_KEY=your-recaptcha-site-key
RECAPTCHA_PRIVATE_KEY=your-recaptcha-secret-key

# -----------------------------
# Rate Limiting
# -----------------------------
RATE_LIMIT_INQUIRIES=5/hour
RATE_LIMIT_APPLICATIONS=3/hour
